{
  "name": "telegram-node",
  "version": "2.1.1",
  "license": "GPL-3.0",
  "description": "Node.js Telegram bot boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/jesusgn90/telegram-node/"
  },
  "author": "Jesús Ángel González Novez",
  "scripts": {
    "lint": "eslint -c .eslintrc.js src/**/*.ts src/*.ts tests/**/*.ts",
    "build": "yarn lint && rimraf ./dist && tsc",
    "start": "yarn build && node dist/index.js",
    "test:unit": "yarn build && jest tests",
    "test:unit:ci": "yarn build && jest tests --ci --runInBand"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "telebot": "latest"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/telebot": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-vue": "^6.1.2",
    "jest": "^25.1.0",
    "rimraf": "^3.0.1",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  }
}
